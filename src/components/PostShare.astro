---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  url: string;
  image?: string;
}

const { title, url, image } = Astro.props;
const encodedTitle = encodeURIComponent(title);
---

<div class='post__share'>
  <div class='share__list'>
    <!-- Facebook -->
    <a
      class='share__link share__facebook'
      href={`https://www.facebook.com/sharer/sharer.php?u=${url}`}
      target='_blank'
      rel='noopener noreferrer nofollow'
      aria-label='Share on Facebook'
    >
      <Icon name='fa7-brands:square-facebook' size={24} />
    </a>

    <!-- Twitter / X -->
    <a
      class='share__link share__twitter'
      href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${url}`}
      target='_blank'
      rel='noopener noreferrer nofollow'
      aria-label='Share on X'
    >
      <Icon name='fa7-brands:x-twitter' size={24} />
    </a>

    <!-- Pinterest -->
    {
      image && (
        <a
          class='share__link share__pinterest'
          href={`https://pinterest.com/pin/create/button/?url=${url}&media=${image}&description=${encodedTitle}`}
          target='_blank'
          rel='noopener noreferrer nofollow'
          aria-label='Share on Pinterest'
        >
          <Icon name='fa7-brands:pinterest' size={24} />
        </a>
      )
    }
  </div>
</div>