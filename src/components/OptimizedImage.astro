---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata | string;
  alt: string;
  class?: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  fetchpriority?: 'high' | 'low' | 'auto';
  decoding?: 'async' | 'sync' | 'auto';
}

const {
  src,
  alt,
  class: className,
  width,
  height,
  loading = 'lazy',
  fetchpriority = 'auto',
  decoding = 'async',
} = Astro.props;
---

{
  typeof src === 'string' ? (
    <img
      class={className}
      src={src}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      fetchpriority={fetchpriority}
      decoding={decoding}
    />
  ) : (
    <Image
      class={className}
      src={src}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      fetchpriority={fetchpriority}
      decoding={decoding}
    />
  )
}