---
import ProjectSection from "@/components/ProjectSection"
import PostsSection from "@/components/PostsSection"
import Timeline from "@/components/Timeline"
import Avatar from "@/components/Avatar"
import Layout from "@/layouts/Layout.astro"
import { HiOutlineArrowDownCircle as DownIcon } from "react-icons/hi2"
import "@/styles/globals.css"
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme")
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light"
  }
  const isDark = getThemePreference() === "dark"
  document.documentElement.classList[isDark ? "add" : "remove"]("dark")

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark")
      localStorage.setItem("theme", isDark ? "dark" : "light")
    })
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    })
  }
</script>

<Layout>
  <main class="p-4 text-slate-700 dark:text-slate-400">
    <section class="flex flex-col w-full h-screen justify-center items-center">
      <p
        class="max-w-56 text-center"
      >
        Hello, I'm <strong>Matt Gilbert</strong>, Bootstrapped  Entrepreneur, Artist,
        Husband, Seeker, Father of Four.
      </p>
     <DownIcon className="text-2xl animate-bounce mt-10" />
    </section>
    <section id="projects" class="flex flex-col w-full justify-center items-center gap-28">
      <h2 class="font-bold">How I Can Help You</h2>
      <ProjectSection client:load />
    </section>
    <section class="flex flex-col w-full justify-center items-center gap-28 mt-56">
      <h2 class="font-bold">Right Now</h2>
      <Timeline />
    </section>
    <section class="flex flex-col w-full justify-center items-center gap-28 mt-56">
      <h2 class="font-bold">Posts</h2>
      <PostsSection client:load />
    </section>
    <section class="flex flex-col w-full justify-center items-center gap-28 mt-56">
      <h2 class="font-bold">About me</h2>
      <div class="flex flex-col items-center gap-4 max-w-[500px]">
        <Avatar src="/linkedin.png" alt="Matt Gilbert" client:load/>
        <p class="text-center">My name is <strong>Matt Gilbert</strong>.</p>
        <p class="text-center">I built my first website back in 2004 while I was still in high school. Fast forward to now—200+ websites later—and I’ve led product marketing and demand generation teams for startups, entrepreneurs, and even Fortune 100 companies.</p>

        <p class="text-center">I’ve helped startups launch and get acquired, guided small businesses from zero to their first $10 million, and managed global marketing teams for publicly traded companies. I’ve also worked with government agencies and contractors, so I know my way around both the public and private sectors.</p>
          
          <p class="text-center">I’ve generated millions of dollars for my employers and clients. Now I want to help as many people as possible do the same.</p>
      </div>
    </section>
  </main>
  <footer>
    <p class="text-center text-sm text-slate-700 dark:text-slate-400 p-4 mt-28">
      <a href="https://everywaydesign.com">Go Everyway</a>
    </p>
  </footer>
</Layout>
